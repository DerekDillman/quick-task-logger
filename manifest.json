{
  "manifest_version": 3,
  "name": "Quick Task Logger",
  "version": "2.0",
  "description": "MSP-focused task logger with templates and categorization",
  "permissions": ["storage", "tabs", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "windows": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Quick Task Logger"
    }
  },
  "options_page": "tasks.html"
}
